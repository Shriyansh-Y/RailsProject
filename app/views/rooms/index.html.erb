<p id="notice"><%= notice %></p>

<h1>Listing Rooms</h1>

<div class="media">
  <div class="media-body">
<table class="table table-hover">
      <thead>
        <tr>
          <th>Room number</th>
          <th>Capacity</th>
          <th>Building</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>

        <% @rooms.each do |room| %>
          <tr>
            <td><%= room.room_number %></td>
            <td><%= room.capacity %></td>
            <td><%= room.building %></td>
            <td><%= link_to 'Show', room, class: "btn btn-mini" %></td>
            <td><%= link_to 'Edit', edit_room_path(room),  class: "btn-mini btn-success" %></td>
            <td><%= link_to 'Destroy', room, method: :delete, class: "btn btn-mini btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% if @rooms.blank? %>
              <h4>There are no rooms containing the term <%= params[:search] %>.</h4>
          <% end %>
        <% end %>
      </tbody>
</table>
</div>
</div>
<br>

<%= link_to 'New Room', new_room_path %>
